{
	"name": "Giles",
	"version": "0.5",
	"manifest_version": 2,
	"author": "Thor Hanks",
	"description": "The indubitably necessary Gerrit helper",

	"permissions":
	[
		"storage",
		"alarms",
		"notifications",
		"tabs",
		"http://gerrit/*"
	],

	"icons":
	{
		"48": "logo_48x48.png",
		"128": "logo_128x128.png"
	},

	"options_ui":
	{
		"page": "options.html",
		"chrome_style": true
	},

	"background":
	{
		"scripts": ["eventPage.js"],
		"persistent": false
	},

	"browser_action":
	{
		"default_icon":
		{
			"19": "logo_19x19.png",
			"38": "logo_38x38.png"
		},
		"default_title": "Giles: The indubitably necessary Gerrit helper",
		"default_popup": "browserAction.html"
	}
}
